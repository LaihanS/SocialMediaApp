<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-light">
                Crear Evento
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" action="/postCreate" method="POST">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                    <input type="hidden" name="idUser" value="{{Usuario.id}}" />
                    <div class="mb-3">
                        <label for="name-input" class="form-label">
                            Nombre
                        </label>
                        <input type="text" class="form-control" id="name-input" name="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="lastname-input" class="form-label">
                            Fecha
                        </label>
                        <input type="date" class="form-control" id="lastname-input" name="date" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone-input" class="form-label">
                            Lugar
                        </label>
                        <input type="text" class="form-control" id="phone-input" name="place" required />
                    </div>
                 
                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>